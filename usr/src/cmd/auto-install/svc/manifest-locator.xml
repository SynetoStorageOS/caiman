<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='SUNWauto-install:manifest-locator'>

<service
	name='application/manifest-locator'
	type='service'
	version='1'>

	<create_default_instance enabled='false' />
	<single_instance/>

	<!-- dns/multicast is required for service discovery -->
	<dependency
		name='multicast'
		grouping='optional_all'
		restart_on='none'
		type='service'>
		<service_fmri value='svc:/network/dns/multicast:default' />
	</dependency>

	<dependent
		name='console-login'
		grouping='optional_all'
		restart_on='none'>
		<service_fmri value='svc:/system/console-login:default' />
	</dependent>

	<exec_method
		type='method'
		name='start'
		exec='/lib/svc/method/manifest-locator'
		timeout_seconds='0' />

	<exec_method
		type='method'
		name='stop'
		exec=':true'
		timeout_seconds='0' />

	<property_group name='startd' type='framework'>
		<propval name='duration' type='astring' value='transient' />
		<propval name='ignore_error' type='astring' value='core,signal' />
	</property_group>

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
				automated installer
			</loctext>
		</common_name>
	</template>
</service>
</service_bundle>
