<service_bundle type='manifest' name='SUNWinstalladm-tools:server'>

<service
	name='system/install/server'
	type='service'
	version='1'>

	<single_instance />

	<dependency
		name='dns-multicast'
		type='service'
		grouping='optional_all'
		restart_on='restart'>
		<service_fmri value='svc:/network/dns/multicast:default' />
	</dependency>

	<dependency
		name='udp6'
		type='service'
		grouping='optional_all'
		restart_on='none'>
		<service_fmri value='svc:/network/tftp/udp6:default' />
	</dependency>

	<dependency
		name='dhcp-server'
		type='service'
		grouping='optional_all'
		restart_on='none'>
		<service_fmri value='svc:/network/dhcp-server:default' />
	</dependency>

	<instance name="default" enabled="false">

		<exec_method
			type='method'
			name='start'
			exec='/lib/svc/method/svc-install-server start'
			timeout_seconds='0' />

		<exec_method
			type='method'
			name='stop'
			exec='/lib/svc/method/svc-install-server stop'
			timeout_seconds='30' />

		<exec_method
			type='method'
			name='refresh'
			exec="/lib/svc/method/svc-install-server refresh"
			timeout_seconds="30" />

		<property_group
			name="all_services"
			type="application">

			<propval
				name="exclude_networks"
				type="boolean"
				value="false"/>

			<propval
				name="networks"
				type="net_address_v4"
				value="0.0.0.0/0"/>

			<propval
				name="port"
				type="integer"
				value="5555"/>

			<propval
				name="default_imagepath_basedir"
				type="astring"
				value="/export/auto_install"/>

		</property_group>

	</instance>

	<stability value='Unstable' />
	<template>

        <common_name>
                <loctext xml:lang='C'>Installadm Utility
                </loctext>
        </common_name>
        <documentation>
                <manpage title='installadm' section='1M' />
        </documentation>

	<pg_pattern
		name="all_services"
		type="application"
		required="true">

		<description>
			<loctext xml:lang='C'>
				Properties affecting all AI services
			</loctext>
		</description>

		<prop_pattern
			name="networks"
			type="net_address_v4"
			required="true">

			<description>
				<loctext xml:lang='C'>
					Networks to allow or disallow as per
					the all_services/exclude_networks
					property
				</loctext>
			</description>
		</prop_pattern>

		<prop_pattern
			name="exclude_networks"
			type="boolean"
			required="true">

			<description>
				<loctext xml:lang='C'>
					Property to exclude (true) or include
					(false) only those networks specified
					in the all_services/networks property
				</loctext>
			</description>
		</prop_pattern>

		<prop_pattern
			name="port"
			type="integer"
			required="true">

			<description>
				<loctext xml:lang='C'>
					Property which defines the default port
					for the webserver connection.
				</loctext>
			</description>
		</prop_pattern>

		<prop_pattern
			name="default_imagepath_basedir"
			type="astring"
			required="true">

			<description>
				<loctext xml:lang='C'>
					Property which defines the default 
					base directory for images.
				</loctext>
			</description>
		</prop_pattern>

	</pg_pattern>

        </template>
</service>

</service_bundle>
